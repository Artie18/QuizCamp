@model ICollection<Platform>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-unit">
    <table class="table table-hover">
        <tr class="text-success">
            <th>Name</th>
            <th>Author</th>
            <th>Platform</th>
        </tr>
        <tbody>
            @foreach (var platform in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(modelTask => platform.Name)</th>
                </tr>
            }
        </tbody>
    </table>
</div>