<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="@Href("~/Content/bootstrap-responsive.css")" type="text/css" />
    <link rel="stylesheet" href="@Href("~/Content/bootstrap-responsive.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Href("~/Content/bootstrap.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Href("~/Content/bootstrap.css")" type="text/css" />
    <script src="@Href("~/Content/JS/jquery-1.9.0.js")"></script>
    <script src="@Href("~/Content/JS/Ajax.js")"></script>
    <script type="text/javascript" src="@Href("~/Scripts/MarkdownDeepLib.min.js")"></script>
    <script type="text/javascript" src="@Href("~/Scripts/Scripts.js")"></script>
</head>
@if (Request.IsAuthenticated)
{
    <body style="background-color: #C0D2FC">
        <header>
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    @Html.ActionLink("QuizCamp", "Index", "Home", null, new { @class = "brand" })
                    <div class=" nav-collapse collapse pull-left">
                        <ul class="nav">
                            <li>@Html.ActionLink("Add Task", "AddTask", "Task")<li>
                            <li>@Html.ActionLink("My Tasks", "MyTasks", "Account")<li>
                        </ul>
                    </div>
                    <div class="nav-collapse  collapse pull-right">
                        <ul class="nav">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                            {
                                <li>
                                    <button href="~/" class="close navbar-text" type="submit" value="LogOff">LogOff</button>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div id="contentWrapper">
            <div id="body">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="span2">
                            <div class="hero-unit" style="background-color: #F2F2F2; margin-left: 0px; padding: 0px;">
                                <ul class="nav nav-list">
                                    <li style="border-bottom: solid; border-bottom-color: #646464;">
                                        @Html.ActionLink("Home", "Index", "Home")
                                    </li>
                                    <li style="border-bottom: solid; border-bottom-color: #646464;">
                                        @Html.ActionLink("Profile", "MyProfile", "Account")
                                    </li>
                                    <li style="border-bottom: solid; border-bottom-color: #646464;">
                                        @Html.ActionLink("Tasks", "Index", "Task")
                                    </li>
                                </ul>
                            </div>
                            <div>
                                @{ Html.RenderAction("TagCloud","Tag"); }
                            </div>
                        </div>
                        <div class="span10">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
</html>

